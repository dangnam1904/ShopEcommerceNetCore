@model IEnumerable<ShopEcommerce.Models.Menu>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Menu</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Home</a></li>
                <li class="breadcrumb-item"><a>Menu</a></li>
                <li class="breadcrumb-item active">List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <p>
        <a asp-action="CreateOrUpdate" asp-controller="Menus">Thêm menu</a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NameMenu)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LinkMenu)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsParent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsChildren)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameMenu)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LinkMenu)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsParent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsChildren)
                                </td>
                                <td>
                                    <a asp-action="CreateOrUpdate" asp-route-id="@item.IdMenu">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.IdMenu">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdMenu">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>
